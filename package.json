{
  "name": "quickmock",
  "version": "2.0.0",
  "description": "Zero-config mock API server with management UI",
  "type": "module",
  "bin": {
    "quickmock": "./bin/quickmock.js"
  },
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "scripts": {
    "build:ui": "cd dashboard-ui && npm run build",
    "build:server": "tsc",
    "build": "npm run build:server && npm run build:ui && cp -r dashboard-ui/dist dist/dashboard",
    "start": "node bin/quickmock.js",
    "dev": "tsx src/cli.ts",
    "dev:ui": "cd dashboard-ui && npm run dev"
  },
  "keywords": [
    "mock",
    "api",
    "server",
    "frontend",
    "development",
    "fake-data"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
